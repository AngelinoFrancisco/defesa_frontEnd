<body class="login">

    <div class="header">
        <div class="esquerdo">
            <p class="titulo"><b>AngoHunt</b></p>
            <div class="img "></div>
        </div>
        
            <a href="registro" class="btn btn-primary">
                Cadastrar - se agora
            </a>
      
        </div>
