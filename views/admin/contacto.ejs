<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin/app.css">
    <link rel="stylesheet" href="/css/admin/aside.css">
    <link rel="stylesheet" href="/css/admin/admin.css">
    <link rel="stylesheet" href="/css/admin/contacto.css">
    <script src="/libs/jquery.min.js"></script>
    <script src="/js/adminjs/controladmin.js"></script>

    <title>Document</title>
</head>

<body>
    <div class="app1">

        <aside>
            <div class="logo">
                <div class="status">
                    <div class="img"></div>
                    <div class="dot"></div>
                </div>
                <h5 class="nome">
                    <%= users.nome%>
                </h5>

            </div>

            <div class="container">
                <div class="links">
                    <a href="/admin/admindashboard">
                        <img id="rel">
                        Relatórios
                    </a>

                    <a href="/admin/usuario">
                        <img id="usu">
                        Usuários
                    </a>

                    <a href="/admin/contacto">
                        <img id="con">
                        Reclamações
                    </a>

                </div>
                <a href="/admin/logout" class="click">
                    <img id="admin">
                    Logout
                </a>
            </div>
        </aside>
        <div class="conct-container">
            <header>
                <p class="titulo"><b>Todos as Reclamações</b></p>
            </header>

            <section>

                <div class="feedback">
                    <div class="container">
                        <% if(Reclamacao.length === 0){%>
                            <h3 class="text-danger">Não existe nenhuma Reclamacão</h3>
                        <% }else{  %>
                        <% Reclamacao.forEach(function(recall){  %>
                            <%Users.forEach(function(user){  %>
                                <% if(recall.user_id == user.id ){  %>
                                <div  id="quadrados" class="card my-2">
                                    <div class="row1"> 
                                        <input type="text" name="nome" value="<%=user.nome%>"
                                                class="form-control " disabled>
        
                                        
                                            <input type="text" name="categoria" value="<%= recall.categoria %>"
                                                class="form-control" disabled>
                                                
                                        <a href="/admin/reclamacao/<%= recall.id %>" class="personal"></a>
                                             
                                    </div> 
         
                                        <div name="content" id="textarea"   >
                                            <%=recall.conteudo%>
                                        </div>
                                   
                                </div> 
                                <%}%>
                                <%})%>
                                <%})%>
                                <%}%>

                    </div>

                </div>

            </section>
        </div>
    </div>
</body>

</html>